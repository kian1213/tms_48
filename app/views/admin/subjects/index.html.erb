<div id="page-wrapper" >
  <div id="page-inner">
    <hr/>
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h2 class="page-header">
             <i class="fa fa-globe"></i><%= t ".header_title" %>
            </h2>
          </div>
          <div class="panel-body">
            <%= link_to new_admin_subject_path, class: "btn btn-success btn-xs
              pull-right btn-panel" do %>
              <i class="fa fa-plus-circle">
                <%= t ".add" %>
              </i>
            <% end %>
            <table class="table table-striped table-advance table-hover">
              <hr>
              <thead>
                <tr>
                  <th><%= t ".title" %></th>
                  <th><%= t ".instruction" %></th>
                </tr>
              </thead>
              <tbody>
                <% @subjects.each do |subject| %>
                  <tr>
                    <td><%= subject.title %></td>
                    <td><%= subject.instruction.truncate 70 %></td>
                    <td>
                      <div class="admin-actions">
                        <%= link_to admin_subject_path(subject), class: "button btn btn-success btn-xs" do %>
                          <i class="fa fa-file-text"></i>
                        <% end %>
                        <%= link_to edit_admin_subject_path(subject), class: "button btn btn-primary btn-xs" do %>
                          <i class="fa fa-pencil"></i>
                        <% end %>
                        <%= link_to admin_subject_path(subject), method: :delete,
                          data: {confirm: t(".delete")},class: "button btn btn-danger btn-xs" do %>
                          <i class="fa fa-trash-o"></i>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
