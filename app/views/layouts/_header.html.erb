<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
      <%= link_to image_tag("framgia_logo.png", alt: "Framgia logo", size:"50x50"),
        t(".tablink_website") %>
      <ul class ="nav bar navbar-nav pull-right">
        <% if user_signed_in? %>
          <li><%= link_to t(".tablink_home"), root_path %></li>
          <li><%= link_to t(".tablink_courses"), courses_path %></li>
          <% if current_user.admin? || current_user.supervisor?%>
            <li><%= link_to t(".tablink_subjects"), "#" %></li>
            <li><%= link_to t(".tablink_supervisors"), "#" %></li>
          <% end %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t (".tablink_trainees") %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to t(".tablink_view_all"), users_path %>
                </li>
              </ul>
            </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t ".tablink_account" %>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".tablink_profile"), current_user %></li>
              <li><%= link_to t(".tablink_setting"), "#" %></li>
              <li class="divider"></li>
              <li><%= link_to t(".tablink_logout"), destroy_user_session_path, method: "delete" %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".tablink_login"), new_user_session_path %></li>
          <li><%= link_to t(".tablink_login_supervisor"), "/admin" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
