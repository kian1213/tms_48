<%= form_for @course, html: {multipart: true,
  class: "form-horizontal style-form"} do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <div class="form-group">
    <%= f.label :title, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :start_date, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_field :start_date, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :end_date, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_field :end_date, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :status, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :status, ["Not started", "Started", "Finish"], {}, {class: "form-control"} %>
    </div>
  </div>
  <%= t ".list_of_subjects" %>
  <%= f.fields_for :course_subjects, CourseSubject.new do |builder| %>
    <%= render "course_subject_fields", f: builder %>
  <% end %>
  <div class="added-field"></div>
  <%= link_to_add_fields t(".add_subject"), f, :course_subjects,
    "btn btn-primary add-remove-answer", t(".add_new_subject") %>
  <div class="form-group">
    <div class="col-sm-12">
      <%= f.submit class: "btn btn-success pull-right" %>
    </div>
  </div>
<% end %>