<section class="wrapper">
  <h3><%= t ".header_title" %></h3>
  <div class="row mt">
    <div class="content-panel">
      <% if can? :create, Course %>
        <%= link_to new_user_course_path(current_user.id), class: "btn btn-success btn-xs
          pull-right btn-panel" do %>
          <i class="fa fa-plus-circle">
            <%= t ".add" %>
          </i>
        <% end %>
      <% end %>
      <table class="table table-striped table-advance table-hover">
        <hr>
        <thead>
          <tr>
            <th><%= t ".title" %></th>
            <th><%= t ".start_date" %></th>
            <th><%= t ".end_date" %></th>
            <th><%= t ".status" %></th>
          </tr>
        </thead>
        <tbody>
          <% @user.courses.each do |course| %>
            <tr>
              <td><%= course.title %></td>
              <td><%= datetime course.start_date %></td>
              <td><%= datetime course.end_date %></td>
              <td><%= course.status %></td>
              <td>
                <div class="admin-actions">
                  <% if can? :read, Course %>
                    <%= link_to user_course_path(current_user.id, course.id),
                      class: "button btn btn-success btn-xs" do %>
                      <i class="fa fa-file-text"></i>
                    <% end %>
                  <% end %>
                  <% if can? :update, Course %>
                    <%= link_to edit_user_course_path(current_user.id, course.id),
                      class: "button btn btn-primary btn-xs" do %>
                      <i class="fa fa-pencil"></i>
                    <% end %>
                  <% end %>
                  <% if can? :destroy, Course %>
                    <%= link_to user_course_path(current_user.id, course.id), method: :delete,
                      data: {confirm: t(".delete")}, class: "button btn btn-danger btn-xs" do %>
                      <i class="fa fa-trash-o"></i>
                    <% end %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>